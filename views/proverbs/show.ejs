<% layout('/layouts/boilerplate') %>
<div class="row">
    <div class="col-6">
        <div class="card mt-3">
            <div class="card-body">
                <h6 class="card-title">
                    <%= proverb.author%>
                </h6>
                <p class="card-text">
                    <%= proverb.title %>
                </p>

                <p class="card-text">Posted By: 
                    <%= proverb.user.username %>
                </p>
            </div>
            <% if(currentUser && proverb.user.equals(currentUser._id)) {%>
            <div class="card-body">
                <a class="btn btn-info" href="/proverbs/<%= proverb._id %>/edit">Edit</a>
                <form class="d-inline" action="/proverbs/<%= proverb._id %>?_method=DELETE" method="post">
                    <button class="btn btn-danger">Delete</button>
                    </form>
                <a class="btn btn-warning" href="/proverbs">Back to Proverbs</a>
            </div>
            <%}%>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
    </div>
    <div class="col-6">
        
        <h3 class="mt-3">Add a comment</h3>
        <form action="/proverbs/<%= proverb._id %>/comments" method="post" class="mb-3">
            <div class="mb-3">
                <label class="form-label" for="body">Comment</label>
                <textarea class="form-control" name="text" id="body" cols="30" rows="3"></textarea>
            </div>
            <button class="btn btn-success">Comment</button>
        </form>
        
        
        <% for(let comment of proverb.comments){ %>
            <div class="card mb-3">
            <div class="card-body">
                <p class="card-text">
                    Comment: <%= comment.text %>
                </p>
                <form action="/proverbs/<%= proverb._id %>/comments/<%= comment._id %>?_method=DELETE" method="post">
                    <% if(currentUser && proverb.user.equals(currentUser._id)) {%>
                <button class="btn btn-sm btn-danger">Delete</button>
                <%}%>
                </form>
            </div>
            </div>
        <% } %>
    </div>
</div>
